<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:HypertrophyApp.Pages"
       x:Class="HypertrophyApp.AppShell">

    <ShellContent Title="Exercises" ContentTemplate="{DataTemplate pages:CustomExercisePage}" />
    <ShellContent Title="Logging" ContentTemplate="{DataTemplate pages:ExerciseLoggingPage}" />
    <ShellContent Title="Feedback" ContentTemplate="{DataTemplate pages:FeedbackPage}" />
    <ShellContent Title="Summary" ContentTemplate="{DataTemplate pages:MesocycleSummaryPage}" />
    <ShellContent Title="Workout Split" ContentTemplate="{DataTemplate pages:WorkoutSplitPage}" />
    <ShellContent Title="Plan Mesocycle" 
                  ContentTemplate="{DataTemplate pages:PlanMesocyclePage}" />
    <ShellContent Title="Create Mesocycle" 
                  ContentTemplate="{DataTemplate pages:CreateMesocyclePage}" 
                  Route="CreateMesocyclePage" />



</Shell>